
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model Domain.Models.LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h2>@ViewData["Title"]</h2>


<div class="row">
    <div class="col-md-4">
        <section>
            <form asp-action="Login" method="post">
                <h4>Use a local account to log in.</h4>
                <hr />
                <div class="form-group">
                    <label for="Login">Username</label>
                    <input type="text" asp-for="UserName" class="form-control" name="username" required />
                </div>
                <div class="form-group">
                    <label for="Password">Password</label>
                    <input type="password" asp-for="Password" class="form-control" name="password" required />
                </div>
                <div class="text-danger" style="color:red">
                    @TempData["LoginError"]
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-default" name="login">Log in</button>
                </div>
                <div class="form-group">
                    <p>
                        <a asp-action="Register">Register as a new user</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>
